---
permalink: /sitemap_posts.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for page in collections.posts %}
  {% set absoluteUrl %}{{ page.url | url | absoluteUrl(meta.url) }}{% endset %}
  <url>
    <loc>https://nickwasused.com{{ absoluteUrl }}</loc>
		{% if page.url == '/' %}
    <lastmod>{{ collections.posts | rssLastUpdatedDate }}</lastmod>
    {% else %}
    <lastmod>{{ page.date | rssDate }}</lastmod>
		{% endif %}
  </url>
{%- endfor %}
</urlset>